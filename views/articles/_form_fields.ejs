<div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="<%= article.title %>" class="form-control" required />
</div>

<div class="form-group mt-3">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>

<div class="form-group mt-3">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control" required><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary mt-3">Cancel</a>
<button type="submit" class="btn btn-dark mt-3">Save</button>
